@page "/games/{ServerId:int}"
@using TradeWars.Data
@inject IDataLayer DataLayer


<h3>Games</h3>
<h1>Builder''s Games</h1>

<p>Star Killer''s Ice 9.</p>

@if (games == null)
{
    <p><em>Loading...</em></p>
}
else
{
    if (games.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Leter</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in games)
                {
                    <tr>
                        <td>@game.Letter</td>
                        <td>@game.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><em>No records found...</em></p>
    }
}


@code {
    [Parameter]
    public int ServerId { get; set; }

    IList<Game> games { get; set; }

