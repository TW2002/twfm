<UserControl
    x:Class="FirstMate.Controls.WelcomeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FirstMate.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Image Name="FirstMateLens" Stretch="Uniform" IsHitTestVisible="False"
               Height="460" Width="510" Margin="10,-130,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Source="ms-appx:///Images/lens.png" />
        <Image Name="FirstMateLogo" Stretch="Uniform"
               Height="75" Width="350" Margin="10,10,0,0" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Source="ms-appx:///Images/logo.png" />
        <TextBlock Margin="50,100,0,0" FontSize="24">Welcome to FirstMate...</TextBlock>
    </Grid>
</UserControl>
